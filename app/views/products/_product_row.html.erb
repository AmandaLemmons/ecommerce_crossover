<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= product.name %></small></h4>
      <p><%= product.description %></p>
    </div>
    <div class="col-xs-4">

      <%= form_for order_line, remote: true do |f| %>
      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency product.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :qty, class: "form-control", min: 1, value: 1%>
          <div class="input-group-btn">
            <%= f.hidden_field :product_id, value: product.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
            <%= link_to "Edit Product", edit_product_path(id: product.id) %>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
